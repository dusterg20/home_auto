<header class="navbar navbar-expand-md navbar-dark fixed-top bg-dark navbar-inverse">
      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <h4 class="nav-link">Home Automation</h4>
          </li>
        </ul>
        <nav class="navbar navbar-expand-md navbar-dark navbar-right">
          <ul class="navbar-nav navbar-right">
            <li class="nav-item active">
              <a class="nav-link" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="<%= help_path %>">Help <span class="sr-only">(current)</span></a>
            </li>
            <% if user_roll_superuser? %>
            <li class="nav-item active">
              <a class="nav-link" href="<%= users_path %>">Users <span class="sr-only">(current)</span></a>
            </li>
            <% end %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true"  aria-expanded="false">Menu  </a>
