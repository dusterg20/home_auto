                <div class="dropdown-divider"></div>
                <%= link_to(raw("Log out"), logout_path, :class => "dropdown-item", method: :delete) %>
                <% else %>
                <a class="dropdown-item" href="<%= login_path %>">Log In</a>
                <% end %>
                <a class="dropdown-item" href="<%= help_path %>">Help</a>
